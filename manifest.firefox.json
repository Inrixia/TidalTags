{
	"manifest_version": 2,
	"name": "TidalTags",
	"version": "1.0",
	"permissions": [
		"webRequest",
		"https://listen.tidal.com/*",
		"storage"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://listen.tidal.com/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"style.css"
			]
		}
	],
	"browser_action": {
		"default_popup": "options.html"
	}
}