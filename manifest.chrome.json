{
	"manifest_version": 3,
	"name": "TidalTags",
	"version": "1.0",
	"permissions": [
		"webRequest",
		"storage"
	],
	"host_permissions": [
		"https://listen.tidal.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://listen.tidal.com/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"style.css"
			]
		}
	],
	"action": {
		"default_popup": "options.html"
	}
}